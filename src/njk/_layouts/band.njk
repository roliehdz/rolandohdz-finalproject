{%extends '_layouts/base.njk'%}

{%block content%}
<div class="container-fluid container-detail">
<div class="row justify-content-center"> 
    <img src="img/members/{{members.slug}}-color.jpg" alt="{{members.name}}" class="img-fluid rounded">
    <img src="img/members/{{members.slug}}-bw.jpg" alt="{{members.name}}" class="img-fluid rounded">
  </div>
<table class="table table-hover">
        <thead>
          <tr>
            <th>Intrusments</th>
            <th>Tenure</th>
            <th>Birthplace</th>
            <th>Birthdate</th>
          </tr>
        </thead>
          <tbody>
            <tr>
              <td>{{members.instruments}}</td>
              <td>{{members.tenure}}</td>
              <td>{{members.birthplace}}</td>
              <td>{{members.birthdate}}</td>
            </tr>
          </tbody>
      </table>

<div class="row justify-content-center">
  <h2> This is {{members.name}} </h2>
    <article> {{members.text | safe}} </article>
</div>
{%endblock%}
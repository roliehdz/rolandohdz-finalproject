{%extends '_layouts/base.njk'%}
{%block page_title%} Tour {%endblock%}
{%block description%} Queens's 2020 Tour. {%endblock%}

{%block content%}
<div class="container container-fluid">
  <div class="row">
  <div class="col">
    <h1> Queen's 2020 Tour! </h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>City</th>
            <th>Venue</th>
          </tr>
        </thead>
        {% for tourdates in tour.tourdates%}
          <tbody>
            <tr>
              <td>{{tourdates.date}}</td>
              <td>{{tourdates.city}}</td>
              <td>{{tourdates.venue}}</td>
            </tr>
          </tbody>
        {% endfor %}
      </table>
   </div>
 </div>
</div>
{%endblock%}